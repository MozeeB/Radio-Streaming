<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="234dp"
        app:srcCompat="@drawable/radio" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/allerta"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:text="Radio Streaming"
            android:textAlignment="center"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bandung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/capsule"
            android:textColor="#fff"
            android:text="MQ FM Bandung" />

        <Button
            android:id="@+id/rodja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="@drawable/capsule"
            android:layout_marginBottom="5dp"
            android:text="Radio Rodja" />

        <Button
            android:id="@+id/muslim"
            android:layout_width="match_parent"
            android:background="@drawable/capsule"
            android:textColor="#fff"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:text="Radio Muslim" />

        <Button
            android:id="@+id/cirebon"
            android:layout_width="match_parent"
            android:background="@drawable/capsule"
            android:textColor="#fff"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:text="Radio KITA Cirebon" />

        <Button
            android:id="@+id/hidayah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/capsule"
            android:textColor="#fff"
            android:text="Radio Hidayah" />
    </LinearLayout>
</RelativeLayout>